@model List<TabularDatabaseManagement.Models.Table>

<h1>Список таблиць</h1>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>Назва</th>
            <th>Кількість полів</th>
            <th>Кількість рядків</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var table in Model)
        {
            <tr>
                <td>@table.Name</td>
                <td>@table.Fields.Count</td>
                <td>@table.Rows.Count</td>
                <td>
                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", "Tables", new { name = table.Name })">Переглянути</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Tables", new { name = table.Name })">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" href="@Url.Action("Create", "Tables")">Створити таблицю</a>
<a class="btn btn-warning" href="@Url.Action("Difference", "Tables")">Різниця таблиць</a>
